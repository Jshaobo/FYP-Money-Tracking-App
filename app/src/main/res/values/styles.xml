<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="keyboard_key_stying">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="cardStyling" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="contentPadding">5dp</item>
    </style>


</resources>