<?xml version="1.0" encoding="utf-8"?><!-- header layout for the list of daily records in record fragment-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPaddingTop="20dp"
    app:contentPaddingBottom="20dp"
    app:contentPaddingLeft="10dp"
    app:contentPaddingRight="10dp"
    style="@style/cardStyling">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_total_expense"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_total_expense_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_text"
                android:textSize="15sp"
                android:text="Expense" />

            <TextView
                android:id="@+id/tv_total_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="9999.99" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_total_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_total_income_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_text"
                android:textSize="15sp"
                android:text="Income" />

            <TextView
                android:id="@+id/tv_total_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="99.99" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_budget_surplus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_text"
                android:textSize="15sp"
                android:text="Budget Surplus" />

            <TextView
                android:id="@+id/tv_budget_surplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="99.99" />

        </LinearLayout>





    </LinearLayout>

</androidx.cardview.widget.CardView>
